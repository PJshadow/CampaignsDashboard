<div class="container-fluid px-3">
  <h1 class="mt-4">Histórico de Campanhas Finalizadas</h1>
  <ul class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Mostra o histórico de campanhas realizadas</li>
  </ul>

  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table id="campanhasTable" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Local Alvo</th>
              <th>Tipo</th>
              <th>Leads</th>
              <th>Início</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            {{#each campanhas}}
              <tr>
                <td>{{id}}</td>
                <td>{{Cidade}} - {{estado}}</td>
                <td>{{TipoDeCampanha}}</td>
                <td>{{leadsAlcancados}}</td>
                <td>{{Inicio}}</td>
                <td>Finalizada</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Scripts -->
<script>
  document.querySelectorAll('#campanhasTable tbody tr').forEach(row => {
    const cell = row.cells[4]; // 5ª coluna: Início
    const rawDate = new Date(cell.textContent.trim());

    // Formata como "dd/mm/yyyy HH:MM"
    const dia = String(rawDate.getDate()).padStart(2, '0');
    const mes = String(rawDate.getMonth() + 1).padStart(2, '0');
    const ano = rawDate.getFullYear();
    const hora = String(rawDate.getHours()).padStart(2, '0');
    const minuto = String(rawDate.getMinutes()).padStart(2, '0');

    cell.textContent = `${dia}/${mes}/${ano} ${hora}:${minuto}`;
  });
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.3.4/js/dataTables.bootstrap5.min.js"></script>

<script>
  $(document).ready(function () {
    $('#campanhasTable').DataTable({
      language: {
        url: '//cdn.datatables.net/plug-ins/2.3.4/i18n/pt-BR.json'
      },
      responsive: true
    });
  });
</script>
